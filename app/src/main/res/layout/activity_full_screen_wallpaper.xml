<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".FullScreenWallpaper">
    <com.github.chrisbanes.photoview.PhotoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/photoViewId"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Set Wallpaper"
        android:id="@+id/btnSetWallpaperId"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:background="@color/colorAccent"
        android:onClick="SetWallpaperEvent"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Download Wallpaper"
        android:layout_marginBottom="5dp"
        android:id="@+id/btnDownloadWallpaperId"
        android:layout_above="@+id/btnSetWallpaperId"

        android:textSize="20sp"
        android:background="@color/colorAccent"
        android:onClick="DownloadWallpaperEvent"/>

</RelativeLayout>